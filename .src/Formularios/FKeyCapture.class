Private DataControl As New CData
Public keytype As String
Public Sub Form_Open()

  Me.Center

End

Public Sub Form_KeyPress()
  
  Select keytype
    Case "CancelKey"
      DataControl.CancelKey = Key.Text
    Case "MaxCreditKey"
      DataControl.MaxCreditKey = Key.Text
    Case "MaxCreditKey2"
      DataControl.MaxCreditKey2 = Key.Text
    Case "MinCreditKey"
      DataControl.MinCreditKey = Key.Text
    Case "MaxVolKey"
      DataControl.MaxVolKey = Key.Text
    Case "MinVolKey"
      DataControl.MinVolKey = Key.Text
    Case "ConfigKey"
      DataControl.ConfigKey = Key.Text
  End Select
  FConfig.LoadKeysText
  Me.Close
  
End

Public Sub Timer1_Timer()

  If InfoLabel.Foreground = &0000000& Then 
    InfoLabel.Foreground = &HFF0000&
  Else 
    InfoLabel.Foreground = &0000000&
  Endif 
  
End
