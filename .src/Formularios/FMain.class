    '     Case "Video"
    '       Functions.Skm_Modo = "Karaoke"
    '     Case "Karaoke"
    '       Functions.Skm_Modo = "Musica"
    '   End Select
    ' Case "s"
    '   Functions.PanelSearchKey
    Case DataControl.ConfigKey
      If Object.IsValid(LoginWin) Then
        LoginWin.Show
      Else
        LoginWin = New FLogin As "LoginWin"
        LoginWin.Show
      Endif
      
      ' FConfig.Show
      ' Me.Hide
      
  End Select
  
End

Public Sub LoginWin_ShowConf()
  
