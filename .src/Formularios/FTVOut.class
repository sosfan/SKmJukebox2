Public ShowTimer As Timer

Public Sub _new()
  
  ShowTimer = New Timer As "ShowTimer"
  
  ShowTimer.Delay = 5000
  
  With Me
    .Border = False
    .FullScreen = True
  End With
  
End

Public Sub MovieBoxTV_MouseDown()

  Me.Hide
  ShowTimer.Start

End

Public Sub ShowTimer_Timer()
  
  Me.Show
  
  ShowTimer.Stop
  
End

Public Sub Form_Resize()

  With MovieBoxTV
    .X = 0
    .Y = 0
    .H = Me.H
    .W = Me.W
  End With

End

Public Sub Form_Open()

  Me.Move(Screens[1].X + 5, Screens[1].Y + 5)

End
