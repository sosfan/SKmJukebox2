Private Sub LoadTotalCoins()
  
  Dim tCoins As Integer
  
  tCoins = (DataControl.Total_credito * DataControl.MoneyValue) + (DataControl.Total_credito2 * DataControl.MoneyValue2)
  
  TotalCoin.Text = "$ " & tCoins
  
