Private Sub SaveConfigs()
  
  'Guarda las configuraciones
  If sSkinRes <> SkinMenu.Text Then
    Message.info("Es necesario reiniciar para que los cambios sean aplicados.")
  Endif
  SaveDirBoxValues
  Gridrefresh.Stop
  FMain.fullscreen_ajust
  FMain.hidecursor
  
  Debug
  
End

